<body>
    <%- include("./includes/navbar.ejs") %>
    <%- include("./includes/flash.ejs") %>
    <div class="main">
     <div class="left">
    <div class="login">
      <h2>Login</h2>
      <form  action="/login" class="needs-validation" novalidate method="post">
        <div class="form">
          <label for="email"  class="form-lable lable">Username:</label>
          <input class="form-control" type="text" id="email" name="email" placeholder="Enter your email" required>
        </div>
        <div class="form">
          <label for="password" class="form-lable lable">Password:</label>
          <input class="form-control" type="password" id="password" name="password" placeholder="Enter your password" required>
        </div>
        <div class="form form-lable">
          <button type="submit" class="btn btn-dark label">Login</button>
        </div>
      </form>
    </div>
    </div>
    <div class="right">
     <img src="/images/logo.png" alt="img">
    </div>
</div>
